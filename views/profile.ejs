<%- include('partials/header') -%>
<div class="container">
  <div class="col mt-5">
   
      <div class="row d-flex justify-content-center mt-4">
         
          
            <div class="col mt-5">
              <h1><strong>Welcome, <%= user.userName %></strong></h1>
              <!--READ figure out how to save city, state &put it under name-then push name down -->
              <!-- <p><strong>Email</strong>: <%= user.email %></p> -->
        
            </div>
            <div class="col mt-2">
            <h2>Add a post</h2>
            <form action="/post/createPost" enctype="multipart/form-data" method="POST">
              <div class="mb-3">
                  <label for="title" class="form-label">Title</label>
                  <input type="text" class="form-control" id="title" name="title">
              </div>
              <div class="mb-3">
                <label for="caption" class="form-label">Description</label>
                <textarea class="form-control" id="caption" name="caption"></textarea>
              </div>
              <div class="mb-3">
                <label for="title" class="form-label">City</label>
                <input type="text" class="form-control" id="city" name="city">
            </div>
            <div class="mb-3">
              <label for="title" class="form-label">State</label>
              <input type="text" class="form-control" id="state" name="state">
          </div>
              <div class="mb-3">
                <label for="imgUpload" class="form-label">Image</label>
                <input type="file" class="form-control" id="imageUpload" name="file">
              </div>
              <button type="submit" class="btn btn-primary" value="Upload">Submit</button>
            </form>
          </div>
      </div>
      <div class=" mt-4 ">
        <h2>Latest Posts</h2>
        <ul class="row list-unstyled">
        <% for(var i=0; i<posts.length; i++) {%>
          <li class="col-3 mt-5">
            <!-- <h5 ><%= posts[i].title %></h5> -->
            <a href="/post/<%= posts[i]._id%>">
              <img class="img-fluid" src="<%= posts[i].image%>">
            </a>

          </li>
        <% } %>
        </ul>
      </div>  
    </div>
  </div>
</div>
<%- include('partials/footer') -%>