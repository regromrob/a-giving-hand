<%- include('partials/header') -%>
<div class="container">
  <div class="row justify-content-center mt-5">
    <div class="col-6">
      <h2><%= post.title %></h2>
      <p class="text-center"><%= post.caption %></p>
      <h6 class="text-center"><strong>By: <%= user.userName %></strong></h6>
      <img class="img-fluid" src="<%= post.image%>" />
      
        
     
      <div class="d-flex bd-highlighted mb-3 ">
        <form
          class="p-2 bd-highlighted"
          action="/post/likePost/<%= post.id %>?_method=PUT"
          method="POST"
        >
          <button class="btn  far fa-heart " type="submit"></button>
        </form>
        <h3 class="p-2 bd-highlighted fs-6">Likes: <%= post.likes %></h3>
        <%if(post.user == user.id){ %>
        <form
          action="/post/deletePost/<%= post.id %>?_method=DELETE"
          method="POST"
          class="ms-auto p-2 bd-highlighted"
        >
          <button class="btn  fa fa-trash " type="submit"></button>
        </form>
        <%}%>
      </div>
    </div>
  </div>
</div>

